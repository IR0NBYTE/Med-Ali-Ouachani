pipeline {
  agent any

  environment {
    DOCKERHUB_REPO = 'ir0nbyte/front_website'  // Replace with your DockerHub repository path
  }

  stages {

    stage('Checkout the code from GitHub') {
      steps {
        checkout([$class: 'GitSCM', branches: [[name: '*/main']], 
                  userRemoteConfigs: [[url: 'https://github.com/IR0NBYTE/Med-Ali-Ouachani']]])
      }
    }

    stage('Build Docker Image') {
      steps { 
        // Build the Docker image with the Docker Hub repository path
        sh "docker build -t ${DOCKERHUB_REPO}:latest ."
      }
    }

    stage('Push Docker Image to Docker Hub') {
      steps {
        // Login to Docker Hub and push the image
        withCredentials([usernamePassword(credentialsId: 'dockerHub', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
          sh 'docker login -u $DOCKERHUB_USERNAME -p $DOCKERHUB_PASSWORD'
        }
        
        // Push the Docker image to Docker Hub
        sh "docker push ${DOCKERHUB_REPO}:latest"
      }
    }

  }
}